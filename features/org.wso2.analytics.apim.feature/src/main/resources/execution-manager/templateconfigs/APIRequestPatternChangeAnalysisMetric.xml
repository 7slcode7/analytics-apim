<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<scenarioConfiguration  domain="APIMAnalytics" name="APIRequestPatternChangeAnalysisMetric" scenario="RequestPatternChangeDetection">
	<description>Detection of request pattern changes</description>
	<parameters>
		<parameter name="regularAPITransitions">
			<value>1</value>
		</parameter>
		<parameter name="requestCount">
			<value>500</value>
		</parameter>
		<parameter name="probabilityThreshold">
			<value>0.95</value>
		</parameter>
		<parameter name="alertSuppressionPeriod">
			<value>30*60*1000</value>
		</parameter>
        <parameter name="severity">
            <value>1</value>
        </parameter>
	</parameters>
</scenarioConfiguration>